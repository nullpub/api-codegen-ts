{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "strict": true,
    "target": "es5",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6"],
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["./src/**/*"]
}
